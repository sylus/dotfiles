# -*-mode:screenrc-*- vim:ft=dosini

# ~/.screenrc
# =============================================================================
# Configures Screen.
#
# Reference: https://www.gnu.org/software/screen/manual/html_node/Startup-Files.html

# Disable the startup message
startup_message off

# Set a large scrollback buffer
defscrollback 32000

# Always start `screen` with UTF-8 enabled (`screen -U`)
defutf8 on
