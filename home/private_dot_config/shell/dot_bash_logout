# ~/.config/shell/.bash_logout
# =============================================================================
# Executed by bash when login shell exits.

# shellcheck shell=bash

# Clear the screen when leaving the console to increase privacy.
if [ "$SHLVL" = 1 ]; then
    [ -x /usr/bin/clear_console ] && /usr/bin/clear_console -q
fi
